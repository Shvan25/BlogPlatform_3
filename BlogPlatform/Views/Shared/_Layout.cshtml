@* Views/Shared/_Layout.cshtml *@
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BlogPlatform</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BlogPlatform.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">BlogPlatform</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home"></i> Главная
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Articles" asp-action="Index">
                                <i class="fas fa-newspaper"></i> Статьи
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Tags" asp-action="Index">
                                <i class="fas fa-tags"></i> Теги
                            </a>
                        </li>

                        @* Административные ссылки - только для админов и модераторов *@
                        @if (User.IsInRole("Admin") || User.IsInRole("Moderator"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link text-dark dropdown-toggle" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-cog"></i> Администрирование
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <li>
                                            <a class="dropdown-item" asp-controller="Users" asp-action="Index">
                                                <i class="fas fa-users"></i> Пользователи
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Role" asp-action="Index">
                                                <i class="fas fa-user-shield"></i> Роли
                                            </a>
                                        </li>
                                    }
                                    <li>
                                        <a class="dropdown-item" asp-controller="Comments" asp-action="Index">
                                            <i class="fas fa-comments"></i> Комментарии
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Tags" asp-action="Create">
                                            <i class="fas fa-plus-circle"></i> Добавить тег
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }

                        @* Для зарегистрированных пользователей *@
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Articles" asp-action="Create">
                                    <i class="fas fa-plus"></i> Новая статья
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Users" asp-action="Profile">
                                    <i class="fas fa-user"></i> Профиль
                                </a>
                            </li>
                        }
                    </ul>

                    <ul class="navbar-nav">
                        @* Информация о пользователе *@
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link text-dark dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-user-circle"></i>
                                    @User.Identity.Name
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <span class="badge bg-danger">Admin</span>
                                    }
                                    else if (User.IsInRole("Moderator"))
                                    {
                                        <span class="badge bg-warning">Moderator</span>
                                    }
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Users" asp-action="Profile">
                                            <i class="fas fa-user"></i> Мой профиль
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Users" asp-action="Edit" asp-route-id="@User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value">
                                            <i class="fas fa-edit"></i> Редактировать профиль
                                        </a>
                                    </li>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <a class="dropdown-item" href="/admin/dashboard">
                                                <i class="fas fa-tachometer-alt"></i> Панель управления
                                            </a>
                                        </li>
                                    }
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item text-danger logout-link" href="javascript:void(0)" onclick="window.logout()">
                                            <i class="fas fa-sign-out-alt"></i> Выйти
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark login-link" asp-controller="Auth" asp-action="Login">
                                    <i class="fas fa-sign-in-alt"></i> Вход
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Auth" asp-action="Register">
                                    <i class="fas fa-user-plus"></i> Регистрация
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    &copy; @DateTime.Now.Year - BlogPlatform
                </div>
                <div class="col-md-6 text-end">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <small>
                            Вы вошли как: <strong>@User.Identity.Name</strong>
                            @if (User.IsInRole("Admin"))
                            {
                                <span class="badge bg-danger ms-2">Администратор</span>
                            }
                            else if (User.IsInRole("Moderator"))
                            {
                                <span class="badge bg-warning ms-2">Модератор</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary ms-2">Пользователь</span>
                            }
                        </small>
                    }
                    else
                    {
                        <small>Вы не авторизованы</small>
                    }
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/auth.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>