@model BlogPlatform.Data.DTOs.TagDTO
@{
    ViewData["Title"] = "Редактирование тега";
    Layout = "_Layout";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-warning">
                    <h4 class="mb-0"><i class="bi bi-pencil"></i> Редактирование тега</h4>
                </div>
                <div class="card-body">
                    <form id="editTagForm">
                        <input type="hidden" id="tagId" value="@Model.Id">

                        <div class="mb-3">
                            <label for="name" class="form-label">Название тега *</label>
                            <input type="text" class="form-control" id="name"
                                   value="@Model.Name" required>
                            <div class="form-text">Название должно быть уникальным</div>
                        </div>

                        <div class="mb-3">
                            <label for="description" class="form-label">Описание тега</label>
                            <textarea class="form-control" id="description" rows="3">@Model.Description</textarea>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-warning">
                                <i class="bi bi-check-circle"></i> Сохранить изменения
                            </button>
                            <a href="/Tags/Details/@Model.Id" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Отмена
                            </a>
                        </div>
                    </form>

                    <div id="message" class="mt-3"></div>
                </div>
            </div>

            <!-- Информация о теге -->
            <div class="card mt-3">
                <div class="card-header">
                    <h5>Информация о теге</h5>
                </div>
                <div class="card-body">
                    <p><strong>ID:</strong> @Model.Id</p>
                    <p><strong>Slug:</strong> @Model.Slug</p>
                    <p><strong>Создан:</strong> @Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")</p>
                    <p><strong>Последнее изменение:</strong> <span id="lastUpdated">Загрузка...</span></p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Проверка прав пользователя
        document.addEventListener('DOMContentLoaded', function() {
            const token = localStorage.getItem('token');
            const user = JSON.parse(localStorage.getItem('user') || '{}');

            if (!token || !user.roles || (!user.roles.includes('Admin') && !user.roles.includes('Moderator'))) {
                alert('У вас нет прав для редактирования тегов');
                window.location.href = '/Tags/Details/@Model.Id';
                return;
            }

            // Загружаем информацию о последнем обновлении
            document.getElementById('lastUpdated').textContent =
                new Date().toLocaleString('ru-RU');
        });

        // Редактирование тега
        document.getElementById('editTagForm').addEventListener('submit', async function(e) {
            e.preventDefault();

            const tagId = document.getElementById('tagId').value;
            const name = document.getElementById('name').value;
            const description = document.getElementById('description').value;

            const messageDiv = document.getElementById('message');
            messageDiv.innerHTML = '<div class="alert alert-info">Сохранение изменений...</div>';

            try {
                const token = localStorage.getItem('token');
                const response = await fetch(`/api/tags/${tagId}`, {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': 'Bearer ' + token
                    },
                    body: JSON.stringify({
                        name: name,
                        description: description
                    })
                });

                if (response.ok) {
                    const updatedTag = await response.json();
                    messageDiv.innerHTML = `
                        <div class="alert alert-success">
                            Тег "${updatedTag.name}" успешно обновлен!
                        </div>
                    `;

                    // Обновляем информацию о последнем изменении
                    document.getElementById('lastUpdated').textContent =
                        new Date().toLocaleString('ru-RU');

                    // Перенаправляем через 2 секунды
                    setTimeout(() => {
                        window.location.href = '/Tags/Details/' + tagId;
                    }, 2000);
                } else {
                    const error = await response.json();
                    messageDiv.innerHTML = `
                        <div class="alert alert-danger">
                            Ошибка: ${error.message || 'Не удалось обновить тег'}
                        </div>
                    `;
                }
            } catch (error) {
                messageDiv.innerHTML = `
                    <div class="alert alert-danger">
                        Ошибка сети: ${error.message}
                    </div>
                `;
            }
        });
    </script>
}