@{
    ViewData["Title"] = "Добавление тега";
    Layout = "_Layout";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0"><i class="bi bi-plus-circle"></i> Добавить новый тег</h4>
                </div>
                <div class="card-body">
                    <form id="createTagForm">
                        <div class="mb-3">
                            <label for="name" class="form-label">Название тега *</label>
                            <input type="text" class="form-control" id="name" required
                                   placeholder="Введите название тега (например, Программирование)">
                            <div class="form-text">Название должно быть уникальным</div>
                        </div>

                        <div class="mb-3">
                            <label for="description" class="form-label">Описание тега (необязательно)</label>
                            <textarea class="form-control" id="description" rows="3"
                                      placeholder="Краткое описание тега"></textarea>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-circle"></i> Добавить тег
                            </button>
                            <a href="/Tags" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> К списку тегов
                            </a>
                        </div>
                    </form>

                    <div id="message" class="mt-3"></div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('createTagForm').addEventListener('submit', async function(e) {
            e.preventDefault();

            const name = document.getElementById('name').value;
            const description = document.getElementById('description').value;

            // Проверяем, есть ли токен
            const token = localStorage.getItem('token');
            if (!token) {
                alert('Для добавления тега необходимо авторизоваться');
                window.location.href = '/Auth/Login';
                return;
            }

            // Проверяем права пользователя
            const user = JSON.parse(localStorage.getItem('user') || '{}');
            if (!user.roles || (!user.roles.includes('Admin') && !user.roles.includes('Moderator'))) {
                alert('У вас нет прав для добавления тегов');
                return;
            }

            const messageDiv = document.getElementById('message');
            messageDiv.innerHTML = '<div class="alert alert-info">Добавление тега...</div>';

            try {
                const response = await fetch('/api/tags', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': 'Bearer ' + token
                    },
                    body: JSON.stringify({
                        name: name,
                        description: description
                    })
                });

                if (response.ok) {
                    const tag = await response.json();
                    messageDiv.innerHTML = `
                        <div class="alert alert-success">
                            Тег "${tag.name}" успешно добавлен!
                        </div>
                    `;

                    // Очищаем форму
                    document.getElementById('createTagForm').reset();

                    // Перенаправляем через 2 секунды
                    setTimeout(() => {
                        window.location.href = '/Tags';
                    }, 2000);
                } else {
                    const error = await response.json();
                    messageDiv.innerHTML = `
                        <div class="alert alert-danger">
                            Ошибка: ${error.message || 'Не удалось добавить тег'}
                        </div>
                    `;
                }
            } catch (error) {
                messageDiv.innerHTML = `
                    <div class="alert alert-danger">
                        Ошибка сети: ${error.message}
                    </div>
                `;
            }
        });
    </script>
}