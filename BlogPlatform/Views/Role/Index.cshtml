@model List<BlogPlatform.Data.Models.Role>
@{
    ViewData["Title"] = "Роли";
    Layout = "_Layout";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-shield-check"></i> Роли</h1>
        @if (User.IsInRole("Admin"))
        {
            <a href="/Role/Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Добавить роль
            </a>
        }
    </div>

    <div class="row">
        @foreach (var role in Model)
        {
            <div class="col-md-4 mb-3">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">
                            <i class="bi bi-shield"></i> @role.Name
                        </h5>
                        <p class="card-text">@role.Description</p>
                        <p class="text-muted small">
                            <i class="bi bi-calendar"></i> Создано: @role.CreatedAt.ToString("dd.MM.yyyy")
                        </p>
                        <div class="btn-group">
                            <a href="/Role/Details/@role.Id" class="btn btn-sm btn-info">
                                <i class="bi bi-eye"></i>
                            </a>
                            @if (User.IsInRole("Admin") && !new[] { "Admin", "Moderator", "User" }.Contains(role.Name))
                            {
                                <a href="/Role/Edit/@role.Id" class="btn btn-sm btn-warning">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a href="/Role/Delete/@role.Id" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i>
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>