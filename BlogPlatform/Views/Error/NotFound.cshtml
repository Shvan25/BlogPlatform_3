@* Views/Error/NotFound.cshtml *@
@{
    ViewData["Title"] = "Страница не найдена";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <div class="error-template">
                <h1 class="display-1 text-warning">
                    <i class="fas fa-exclamation-triangle"></i> 404
                </h1>
                <h2 class="display-4">Страница не найдена</h2>
                <div class="error-details mt-4">
                    <p class="lead">
                        Запрашиваемая вами страница не существует или была перемещена.
                    </p>
                    <p>
                        Проверьте правильность URL-адреса или вернитесь на главную страницу.
                    </p>
                    @if (!string.IsNullOrEmpty(Context.Request.Path))
                    {
                        <div class="alert alert-secondary mt-3">
                            <small>Запрошенный путь: <code>@Context.Request.Path</code></small>
                        </div>
                    }
                </div>
                <div class="error-actions mt-5">
                    <a href="/" class="btn btn-primary btn-lg me-3">
                        <i class="fas fa-home"></i> На главную
                    </a>
                    <a href="javascript:history.back()" class="btn btn-outline-secondary btn-lg">
                        <i class="fas fa-arrow-left"></i> Вернуться назад
                    </a>
                </div>

                <div class="mt-5">
                    <h5>Возможно, вы искали:</h5>
                    <div class="row mt-3">
                        <div class="col-md-4">
                            <div class="card">
                                <div class="card-body">
                                    <h6><i class="fas fa-newspaper"></i> Статьи</h6>
                                    <a href="/Articles" class="btn btn-sm btn-outline-primary">Перейти к статьям</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card">
                                <div class="card-body">
                                    <h6><i class="fas fa-tags"></i> Теги</h6>
                                    <a href="/Tags" class="btn btn-sm btn-outline-primary">Перейти к тегам</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card">
                                <div class="card-body">
                                    <h6><i class="fas fa-search"></i> Поиск</h6>
                                    <a href="/Articles" class="btn btn-sm btn-outline-primary">Найти статью</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .error-template {
        padding: 40px 15px;
    }

    .display-1 {
        font-size: 8rem;
        font-weight: 300;
        line-height: 1.2;
    }

    .display-4 {
        font-size: 3.5rem;
        font-weight: 300;
        line-height: 1.2;
    }

    .lead {
        font-size: 1.25rem;
        font-weight: 300;
    }

    .card {
        transition: transform 0.2s;
    }

        .card:hover {
            transform: translateY(-5px);
        }
</style>