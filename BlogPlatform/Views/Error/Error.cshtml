@* Views/Error/Error.cshtml *@
@{
    ViewData["Title"] = "Что-то пошло не так";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="error-template text-center">
                <h1 class="display-1 text-danger">
                    <i class="fas fa-exclamation-circle"></i> Ошибка
                </h1>
                <h2 class="display-4">Что-то пошло не так</h2>

                <div class="error-details mt-4">
                    <p class="lead">
                        При обработке вашего запроса произошла ошибка. Мы уже работаем над её устранением.
                    </p>

                    @if (ViewData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger mt-3">
                            <h5><i class="fas fa-bug"></i> Детали ошибки:</h5>
                            <p>@ViewData["ErrorMessage"]</p>
                        </div>
                    }

                    @if (ViewData["Path"] != null)
                    {
                        <div class="alert alert-secondary mt-2">
                            <small>Путь: <code>@ViewData["Path"]</code></small>
                        </div>
                    }

                    @if (ViewData["StackTrace"] != null && Context.User.IsInRole("Admin"))
                    {
                        <div class="mt-3 text-start">
                            <button class="btn btn-sm btn-outline-secondary" type="button"
                                    data-bs-toggle="collapse"
                                    data-bs-target="#stackTrace"
                                    aria-expanded="false"
                                    aria-controls="stackTrace">
                                <i class="fas fa-code"></i> Показать стек вызовов (только для администраторов)
                            </button>

                            <div class="collapse mt-2" id="stackTrace">
                                <div class="card card-body">
                                    <pre class="mb-0"><code>@ViewData["StackTrace"]</code></pre>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <div class="error-actions mt-5">
                    <a href="/" class="btn btn-primary btn-lg me-3">
                        <i class="fas fa-home"></i> На главную
                    </a>

                    <a href="javascript:history.back()" class="btn btn-outline-secondary btn-lg me-3">
                        <i class="fas fa-arrow-left"></i> Назад
                    </a>

                    <button onclick="location.reload()" class="btn btn-outline-primary btn-lg">
                        <i class="fas fa-redo"></i> Обновить страницу
                    </button>
                </div>

                <div class="mt-5">
                    <div class="row">
                        <div class="col-md-6 offset-md-3">
                            <div class="card">
                                <div class="card-body">
                                    <h5><i class="fas fa-headset"></i> Нужна помощь?</h5>
                                    <p>Если ошибка повторяется, свяжитесь с нашей поддержкой:</p>
                                    <ul class="list-unstyled">
                                        <li><i class="fas fa-envelope"></i> support@blogplatform.com</li>
                                        <li><i class="fas fa-phone"></i> +7 (999) 123-45-67</li>
                                    </ul>
                                    <button class="btn btn-outline-primary" onclick="reportError()">
                                        <i class="fas fa-bug"></i> Сообщить об ошибке
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function reportError() {
            const errorDetails = {
                message: '@ViewData["ErrorMessage"]',
                path: '@ViewData["Path"]',
                userAgent: navigator.userAgent,
                timestamp: new Date().toISOString()
            };

            // Здесь можно отправить отчет об ошибке на сервер
            fetch('/api/error/report', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(errorDetails)
            })
            .then(response => {
                if (response.ok) {
                    alert('Спасибо! Отчет об ошибке отправлен.');
                }
            })
            .catch(error => {
                console.error('Ошибка при отправке отчета:', error);
            });
        }
    </script>
}

<style>
    .error-template {
        padding: 40px 15px;
    }

    .display-1 {
        font-size: 8rem;
        font-weight: 300;
        line-height: 1.2;
    }

    .display-4 {
        font-size: 3.5rem;
        font-weight: 300;
        line-height: 1.2;
    }

    .lead {
        font-size: 1.25rem;
        font-weight: 300;
    }

    pre {
        background-color: #f8f9fa;
        padding: 15px;
        border-radius: 5px;
        font-size: 0.9rem;
        max-height: 300px;
        overflow-y: auto;
    }
</style>