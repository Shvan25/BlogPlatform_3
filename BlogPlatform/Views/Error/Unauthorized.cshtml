@* Views/Error/Unauthorized.cshtml *@
@{
    ViewData["Title"] = "Неавторизованный доступ";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <div class="error-template">
                <h1 class="display-1 text-warning">
                    <i class="fas fa-lock"></i> 401
                </h1>
                <h2 class="display-4">Требуется авторизация</h2>
                <div class="error-details mt-4">
                    <p class="lead">
                        Для доступа к этой странице необходимо войти в систему.
                    </p>
                    <p>
                        Пожалуйста, авторизуйтесь или зарегистрируйтесь.
                    </p>
                </div>
                <div class="error-actions mt-5">
                    <a href="/Auth/Login" class="btn btn-primary btn-lg me-3">
                        <i class="fas fa-sign-in-alt"></i> Войти
                    </a>
                    <a href="/Auth/Register" class="btn btn-outline-primary btn-lg">
                        <i class="fas fa-user-plus"></i> Зарегистрироваться
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .error-template {
        padding: 40px 15px;
    }

    .display-1 {
        font-size: 8rem;
        font-weight: 300;
        line-height: 1.2;
    }

    .display-4 {
        font-size: 3.5rem;
        font-weight: 300;
        line-height: 1.2;
    }
</style>