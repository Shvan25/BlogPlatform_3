@model BlogPlatform.Data.DTOs.UserDTO
@{
    ViewData["Title"] = "Удаление пользователя";
    Layout = "_Layout";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Удаление пользователя</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger">
                        <h5><i class="bi bi-exclamation-triangle"></i> Внимание!</h5>
                        <p>Вы собираетесь удалить пользователя. Это действие нельзя отменить.</p>
                        <p class="mb-0"><strong>Все статьи и комментарии пользователя также будут удалены!</strong></p>
                    </div>

                    <div class="card mb-3">
                        <div class="card-body">
                            <h5 class="card-title">@Model.Username</h5>
                            <p><strong>Email:</strong> @Model.Email</p>
                            <p><strong>Полное имя:</strong> @Model.FullName</p>
                            <p>
                                <strong>Роли:</strong>
                                @foreach (var role in Model.Roles)
                                {
                                    <span class="badge bg-secondary me-1">@role</span>
                                }
                            </p>
                            <p class="text-muted">
                                Зарегистрирован: @Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")
                            </p>
                        </div>
                    </div>

                    <form id="deleteForm">
                        <input type="hidden" id="userId" value="@Model.Id">

                        <div class="mb-3">
                            <label for="confirmText" class="form-label">
                                Для подтверждения введите "УДАЛИТЬ":
                            </label>
                            <input type="text" class="form-control" id="confirmText" required>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-danger" id="deleteBtn" disabled>
                                <i class="bi bi-trash"></i> Удалить пользователя
                            </button>
                            <a href="/Users/Details/@Model.Id" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Отмена
                            </a>
                        </div>
                    </form>

                    <div id="message" class="mt-3"></div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('confirmText').addEventListener('input', function(e) {
            const deleteBtn = document.getElementById('deleteBtn');
            deleteBtn.disabled = e.target.value !== 'УДАЛИТЬ';
        });

        document.getElementById('deleteForm').addEventListener('submit', async function(e) {
            e.preventDefault();

            const userId = document.getElementById('userId').value;

            const messageDiv = document.getElementById('message');
            messageDiv.innerHTML = '<div class="alert alert-info">Удаление пользователя...</div>';

            try {
                const token = localStorage.getItem('token');
                const response = await fetch(`/api/users/${userId}`, {
                    method: 'DELETE',
                    headers: {
                        'Authorization': 'Bearer ' + token
                    }
                });

                if (response.ok) {
                    messageDiv.innerHTML = `
                        <div class="alert alert-success">
                            Пользователь успешно удален!
                        </div>
                    `;

                    setTimeout(() => {
                        window.location.href = '/Users';
                    }, 2000);
                } else {
                    const error = await response.json();
                    messageDiv.innerHTML = `
                        <div class="alert alert-danger">
                            Ошибка: ${error.message || 'Не удалось удалить пользователя'}
                        </div>
                    `;
                }
            } catch (error) {
                messageDiv.innerHTML = `
                    <div class="alert alert-danger">
                        Ошибка сети: ${error.message}
                    </div>
                `;
            }
        });
    </script>
}