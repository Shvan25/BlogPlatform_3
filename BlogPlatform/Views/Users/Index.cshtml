@* Views/Users/Index.cshtml *@
@model List<BlogPlatform.Data.DTOs.UserDTO>
@{
    ViewData["Title"] = "Пользователи";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>
            <i class="fas fa-users"></i> Пользователи
            <span class="badge bg-secondary">@Model.Count</span>
        </h1>

        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="btn btn-success">
                <i class="fas fa-user-plus"></i> Добавить пользователя
            </a>
        }
    </div>

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Пользователь</th>
                        <th>Email</th>
                        <th>Имя</th>
                        <th>Роли</th>
                        <th>Статус</th>
                        <th>Дата регистрации</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.Id</td>
                            <td>
                                <strong>@user.Username</strong>
                                @if (User.Identity.Name == user.Username)
                                {
                                    <span class="badge bg-info ms-1">Вы</span>
                                }
                            </td>
                            <td>@user.Email</td>
                            <td>@user.FullName</td>
                            <td>
                                @if (user.Roles != null)
                                {
                                    foreach (var role in user.Roles)
                                    {
                                        <span class="badge @GetRoleBadgeClass(role) me-1">@role</span>
                                    }
                                }
                            </td>
                            <td>
                                @if (user.IsActive)
                                {
                                    <span class="badge bg-success">Активен</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Заблокирован</span>
                                }
                            </td>
                            <td>@user.CreatedAt.ToString("dd.MM.yyyy")</td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-outline-info">
                                        <i class="fas fa-eye"></i>
                                    </a>

                                    @* Редактирование - только для админов *@
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-outline-warning">
                                            <i class="fas fa-edit"></i>
                                        </a>

                                        @* Нельзя удалить самого себя *@
                                        @if (User.Identity.Name != user.Username)
                                        {
                                            <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-outline-danger">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        }
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i> Пользователи не найдены.
        </div>
    }
</div>

@functions {
    public string GetRoleBadgeClass(string role)
    {
        return role switch
        {
            "Admin" => "bg-danger",
            "Moderator" => "bg-warning",
            "User" => "bg-secondary",
            _ => "bg-info"
        };
    }
}