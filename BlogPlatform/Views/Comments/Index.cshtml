@model List<BlogPlatform.Data.DTOs.CommentDTO>
@{
    ViewData["Title"] = "Комментарии";
    Layout = "_Layout";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-chat-text"></i> Комментарии</h1>
    </div>

    <div class="card">
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Комментарий</th>
                        <th>Статья</th>
                        <th>Автор</th>
                        <th>Статус</th>
                        <th>Дата</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var comment in Model)
                    {
                        <tr>
                            <td>@comment.Id</td>
                            <td>
                                @if (comment.Content.Length > 50)
                                {
                                    @comment.Content.Substring(0, 50)
                            
                                    <text>...</text>
                                }
                                else
                                {
                                    @comment.Content
                                }
                            </td>
                            <td>@comment.ArticleTitle</td>
                            <td>@comment.UserName</td>
                            <td>
                                @if (comment.IsApproved)
                                {
                                    <span class="badge bg-success">Одобрен</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning">На модерации</span>
                                }
                            </td>
                            <td>@comment.CreatedAt.ToString("dd.MM.yyyy")</td>
                            <td>
                                <a href="/Comments/Details/@comment.Id" class="btn btn-sm btn-info">
                                    <i class="bi bi-eye"></i>
                                </a>
                                @if (User.IsInRole("Admin") || User.IsInRole("Moderator"))
                                {
                                    <a href="/Comments/Edit/@comment.Id" class="btn btn-sm btn-warning">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                }
                                @if (User.IsInRole("Admin"))
                                {
                                    <a href="/Comments/Delete/@comment.Id" class="btn btn-sm btn-danger">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>