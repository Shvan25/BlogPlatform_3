@model BlogPlatform.Data.DTOs.CommentDTO
@{
    ViewData["Title"] = "Редактирование комментария";
    Layout = "_Layout";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-warning">
                    <h4 class="mb-0"><i class="bi bi-pencil"></i> Редактирование комментария</h4>
                </div>
                <div class="card-body">
                    <form id="editCommentForm">
                        <input type="hidden" id="commentId" value="@Model.Id">

                        <div class="mb-3">
                            <label for="content" class="form-label">Комментарий *</label>
                            <textarea class="form-control" id="content" rows="5" required>@Model.Content</textarea>
                        </div>

                        @if (User.IsInRole("Admin") || User.IsInRole("Moderator"))
                        {
                            <div class="mb-3 form-check">
                                <input type="checkbox" class="form-check-input" id="isApproved"
                                       @(Model.IsApproved ? "checked" : "")>
                                <label class="form-check-label" for="isApproved">
                                    Одобрен
                                </label>
                            </div>
                        }

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-warning">
                                <i class="bi bi-check-circle"></i> Сохранить изменения
                            </button>
                            <a href="/Comments/Details/@Model.Id" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Отмена
                            </a>
                        </div>
                    </form>

                    <div id="message" class="mt-3"></div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('editCommentForm').addEventListener('submit', async function(e) {
            e.preventDefault();

            const commentId = document.getElementById('commentId').value;
            const content = document.getElementById('content').value;
            const isApproved = document.getElementById('isApproved')?.checked || false;

            const messageDiv = document.getElementById('message');
            messageDiv.innerHTML = '<div class="alert alert-info">Сохранение изменений...</div>';

            try {
                const token = localStorage.getItem('token');
                const response = await fetch(`/api/comments/${commentId}`, {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': 'Bearer ' + token
                    },
                    body: JSON.stringify({
                        content: content,
                        isApproved: isApproved
                    })
                });

                if (response.ok) {
                    messageDiv.innerHTML = `
                        <div class="alert alert-success">
                            Комментарий успешно обновлен!
                        </div>
                    `;

                    setTimeout(() => {
                        window.location.href = '/Comments/Details/' + commentId;
                    }, 2000);
                } else {
                    const error = await response.json();
                    messageDiv.innerHTML = `
                        <div class="alert alert-danger">
                            Ошибка: ${error.message || 'Не удалось обновить комментарий'}
                        </div>
                    `;
                }
            } catch (error) {
                messageDiv.innerHTML = `
                    <div class="alert alert-danger">
                        Ошибка сети: ${error.message}
                    </div>
                `;
            }
        });
    </script>
}